<p id="notice"><%= notice %></p>

<h2>Nest Cams</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Alert</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cams.each do |cam| %>
      <tr>
        <td><%= cam.title %></td>
        <td><%= cam.alert %></td>
        <td><%= link_to 'Alerts', cam %></td>
        <td><%= link_to 'Edit', edit_cam_path(cam) %></td>
        <td><%= link_to 'Remove', cam, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
