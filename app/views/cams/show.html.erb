<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @cam.title %>
</p>

<p>
  <strong>Alert:</strong>
  <%= @cam.alert %>
</p>

<div id="monitor_status" style="display:none">
    Montior text holder
</div>


<p id="activate">
  Turn on Alert monitor to save alerts.<br>
  Yes, save alerts <%= radio_button_tag(:monitor, "on" ,true, class: "monitor_toggle") %> <br>
  No, don't save alerts <%= radio_button_tag(:monitor, "off",true, class: "monitor_toggle") %><br>
</p>




<div id="anilerts">
<% @u = Alert.all %>
<% @anilerts = @u.map {|alert| alert.animated_url } %>
<% @anilerts.each do |x| %>
  <a href="<%=x%>"><img src="<%= x %>" alt="" /></a>
  <% end %>
</div>

